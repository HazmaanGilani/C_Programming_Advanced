<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cprograms.mproject.cprograms.Score"
    android:background="#da30b29b"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="#da30b29b">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#da30b29b">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hightext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#da30b29b"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:text="jkadjksakfbs"
         />
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#da30b29b">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/scoretext"
        android:background="#da30b29b"
        android:textColor="#ffffff"
        android:textSize="24dp"

        android:layout_below="@+id/hightext"
        android:layout_alignLeft="@+id/wrongtext"
        android:layout_alignStart="@+id/wrongtext" />
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#da30b29b">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/wrongtext"
        android:layout_below="@+id/scoretext"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:background="#da30b29b"

         />

    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/restartbtn"
        android:textColor="#ffffff"
        android:layout_below="@+id/wrongtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitbtn"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/restartbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


</LinearLayout>
</ScrollView>
</RelativeLayout>